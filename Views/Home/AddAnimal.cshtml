@model AddAnimalViewModel
@{
    ViewBag.Title = "Add Animal";
}
@section Scripts {
    <script src="~/lib/js/input-on-change.js"></script>
}

<div class="row item-center item-mg-top">
    <div class="col-md-8">
<h1>Add Service</h1>
<form enctype="multipart/form-data" asp-controller="Home" asp-action="AddAnimal"
              method="post" class="mt-3 form-request form-login form-add">
    <div class="form-group row mt-5">
        <label asp-for="Name" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Name" class="form-control" placeholder="Name">
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row mt-5 display-none">
        <label asp-for="Age" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
                    <input value="8" asp-for="Age" value="8" class="form-control" placeholder="Age in years">
            <span asp-validation-for="Age" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row mt-5">
        <label asp-for="Description" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Description" class="form-control" placeholder="Description">
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
    </div>

            <div class="form-group row mt-5">
                <label asp-for="CategoryId" class="col-sm-2 col-form-label">For</label>
        <div class="col-sm-10">
            <select asp-for="CategoryId" class="custom-select mr-sm-2"
                    asp-items="@(new SelectList(Model.AllCategories, nameof(Category.Id), nameof(Category.Name)))">
                <option value="">Please Select</option>
            </select>
            <span asp-validation-for="CategoryId" class="text-danger"></span>
        </div>
    </div>

            <div class="form-group row mt-5">
        <label asp-for="Picture" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <div class="custom-file">
                <input asp-for="Picture" class="form-control custom-file-input">
                <label class="custom-file-label">Choose File...</label>
                <span asp-validation-for="Picture" class="text-danger"></span>
                @*<span asp-validation-for="PictureSize" class="text-danger"></span>*@
            </div>
        </div>
    </div>

    <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group row mt-3 item-center">
        
            <button type="submit" class="btn btn-primary">Add Service</button>
   
    </div>


</form>
    </div>
</div>